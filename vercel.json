{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/status", "dest": "/server.js" },
    { "src": "/contact", "dest": "/server.js" },
    { "src": "/request", "dest": "/server.js" },

    { "src": "/\\.well-known/(.*)", "dest": "/.well-known/$1" },

    { "src": "/legal/privacy", "dest": "/public/legal/privacy.html" },
    { "src": "/legal/terms", "dest": "/public/legal/terms.html" },

    { "src": "/ai-plugin\\.json", "dest": "/ai-plugin.json" }
  ]
}
